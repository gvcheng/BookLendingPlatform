<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.booklending.mapper.UserMapper">
    
    <resultMap id="UserResultMap" type="com.booklending.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="role" column="role"/>
        <result property="active" column="active"/>
        <result property="balance" column="balance"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>
    
    <insert id="insert" parameterType="com.booklending.entity.User">
        INSERT INTO user (username, password, email, phone, role, active, balance, created_at, updated_at)
        VALUES (#{username}, #{password}, #{email}, #{phone}, #{role}, #{active}, #{balance}, #{createdAt}, #{updatedAt})
    </insert>
    
    <update id="update" parameterType="com.booklending.entity.User">
        UPDATE user
        SET username = #{username},
            password = #{password},
            email = #{email},
            phone = #{phone},
            role = #{role},
            active = #{active},
            balance = #{balance},
            updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>
    
    <update id="updatePassword">
        UPDATE user
        SET password = #{password},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>
    
    <update id="updateActiveStatus">
        UPDATE user
        SET active = #{active},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>
    
    <delete id="delete" parameterType="Long">
        DELETE FROM user WHERE id = #{id}
    </delete>
    
    <select id="selectById" resultMap="UserResultMap" parameterType="Long">
        SELECT * FROM user WHERE id = #{id}
    </select>
    
    <select id="selectByUsername" resultMap="UserResultMap" parameterType="String">
        SELECT * FROM user WHERE username = #{username}
    </select>
    
    <select id="selectAll" resultMap="UserResultMap">
        SELECT * FROM user ORDER BY created_at DESC
    </select>
    
    <select id="existsByUsername" resultType="Integer" parameterType="String">
        SELECT COUNT(*) FROM user WHERE username = #{username}
    </select>
</mapper>